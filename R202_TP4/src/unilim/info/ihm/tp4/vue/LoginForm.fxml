<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.text.Font?>

<BorderPane
    fx:controller="unilim.info.ihm.tp4.controleur.LoginFormControleur"
    maxHeight="-Infinity"
    maxWidth="-Infinity"
    minHeight="-Infinity"
    minWidth="-Infinity"
    prefHeight="170.0"
    prefWidth="600.0"
    xmlns="http://javafx.com/javafx/8.0.171"
    xmlns:fx="http://javafx.com/fxml/1">
   <top>
      <Label text="Veuillez saisir vos informations de login" underline="true" BorderPane.alignment="CENTER">
         <padding>
            <Insets bottom="16.0" />
         </padding>
         <font>
            <Font size="14.0" />
         </font>
      </Label>
   </top>
   <left>
      <Label fx:id="idLibErr" maxWidth="250.0" minWidth="250.0" text="En cas d'erreur" BorderPane.alignment="CENTER" />
   </left>
   <center>
      <GridPane BorderPane.alignment="CENTER">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Label text="Utilisateur :" />
            <Label text="Mot de passe :" GridPane.rowIndex="1" />
            <Label text="Application :" GridPane.rowIndex="2" />
            <TextField fx:id="idUser" onAction="#validerSaisies" GridPane.columnIndex="1" />
            <PasswordField fx:id="idPwd" onAction="#validerSaisies" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <ComboBox fx:id="idCb" onAction="#initialize" onContextMenuRequested="#initialize" prefWidth="150.0"  GridPane.columnIndex="1" GridPane.rowIndex="2">
               <cursor>
                  <Cursor fx:constant="NONE" />
               </cursor></ComboBox>
         </children>
      </GridPane>
   </center>
   <right>
      <Button mnemonicParsing="false" onMouseClicked="#validerSaisies" text="Valider" BorderPane.alignment="CENTER">
         <padding>
            <Insets left="20.0" right="20.0" />
         </padding></Button>
   </right>
   <bottom>
      <Label fx:id="idLibBas" onInputMethodTextChanged="#validerSaisies"  text="login de &lt;xxx&gt; pour application &lt;xxx&gt; le xx/xx/xxxx Ã  hh:mm:ss" BorderPane.alignment="CENTER" />
   </bottom>
</BorderPane>
